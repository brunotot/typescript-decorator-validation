{
  "author": "Bruno Tot",
  "name": "tdv-monorepo",
  "private": true,
  "version": "3.1.0",
  "description": "Typescript form validation using Decorators",
  "license": "MIT",
  "scripts": {
    "core/main": "test -d ./node_modules || npm i --force && ts-node packages/core/src/main.ts",
    "core/test": "cd ./packages/core && export TS_JEST_DISABLE_VER_CHECKER=true && npx jest",
    "core/build": "cd ./packages/core && npm run build",
    "core/deploy:minor": "cd ./packages/core && npm run deploy:minor",
    "core/deploy:major": "cd ./packages/core && npm run deploy:major",
    "core/deploy:patch": "cd ./packages/core && npm run deploy:patch",
    "react/deploy:minor": "cd ./packages/react && npm run deploy:minor",
    "react/deploy:major": "cd ./packages/react && npm run deploy:major",
    "react/deploy:patch": "cd ./packages/react && npm run deploy:patch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "jest": "^29.5.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.0-beta"
  },
  "workspaces": [
    "packages/*"
  ]
}
