{
  "author": "Bruno Tot",
  "name": "tdv-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "TypeScript form validation using Decorators",
  "license": "MIT",
  "scripts": {
    "core/main": "test -d ./node_modules || npm i --force && ts-node packages/core/src/main.ts",
    "core/test": "npm run test --prefix=packages/core",
    "core/build": "npm run build --prefix=packages/core",
    "core/deploy:minor": "npm run deploy:minor --prefix=packages/core",
    "core/deploy:major": "npm run deploy:major --prefix=packages/core",
    "core/deploy:patch": "npm run deploy:patch --prefix=packages/core",
    "react/deploy:minor": "npm run deploy:minor --prefix=packages/react",
    "react/deploy:major": "npm run deploy:major --prefix=packages/react",
    "react/deploy:patch": "npm run deploy:patch --prefix=packages/react",
    "react/test": "npm run test --prefix=packages/react",
    "pushAll": "git add . && git commit -m \"struct refactor\" && git push",
    "bumpAll:patch": "npm run core/deploy:patch && npm run react/deploy:patch",
    "bumpAll:minor": "npm run core/deploy:minor && npm run react/deploy:minor",
    "bumpAll:major": "npm run core/deploy:major && npm run react/deploy:major"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.0-beta"
  },
  "workspaces": [
    "packages/*"
  ]
}
