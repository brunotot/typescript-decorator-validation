{
  "author": "Bruno Tot",
  "name": "tdv-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "TypeScript form validation using Decorators",
  "license": "MIT",
  "scripts": {
    "lint": "eslint 'packages/*/src/**/*.ts'",
    "clean": "rm -rf docs dist packages/core/dist packages/react/dist",
    "build": "tsc --build",
    "docs": "npm i --force --silent && typedoc",
    "build-docs": "npm run clean && npm run build --silent && npm run docs",
    "core/playground": "npm run playground --prefix=packages/core",
    "core/test": "npm run test --prefix=packages/core",
    "core/build": "npm run build --prefix=packages/core",
    "core/deploy:minor": "npm run deploy:minor --prefix=packages/core",
    "core/deploy:major": "npm run deploy:major --prefix=packages/core",
    "core/deploy:patch": "npm run deploy:patch --prefix=packages/core",
    "react/deploy:minor": "npm run deploy:minor --prefix=packages/react",
    "react/deploy:major": "npm run deploy:major --prefix=packages/react",
    "react/deploy:patch": "npm run deploy:patch --prefix=packages/react",
    "react/test": "npm run test --prefix=packages/react",
    "react/build": "npm run build --prefix=packages/react",
    "pushAll": "git add . && bash scripts/commit.sh --group=chore --message=\"Automated commit\" && git push"
  },
  "devDependencies": {
    "@mxssfd/typedoc-theme": "^1.1.3",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "i18n-auto-translation": "^1.3.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
